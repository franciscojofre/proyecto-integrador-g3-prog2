<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<!-- Include Header -->

<body>
	<!-- Header -->
	<%- include('./partials/headerDesLogueado') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="titles">
		<h2 class="products-title">Registrate</h2>
	</div>
	
	<!-- Productos Encontrados -->
	<form method="POST" action="/user/register" enctype="multipart/form-data">
		<div class="container">
			<label class="textForm" for="img"><b>Foto de perfil</b></label>
			<div class="imgcontainer">
					<img src="/images/users/default-image.png" alt="Avatar" class="avatar">
					<input type="file" name="imgPerfil" id="perfil">
			</div>			
			
			<label class="textForm" for="uname"><b>Nombre completo</b></label>
			<input class="inpForm" type="text" placeholder="Nombre" name="name" id="name" required>

			<label class="textForm" for="uname"><b>Email</b></label>
			<input class="inpForm" type="email" placeholder="Email" name="email" id="password" required>
		
			<label class="textForm" for="psw"><b>Contraseña</b></label>
			<input class="inpForm" type="password" placeholder="Contraseña" name="password" id="password" required>
			
			<label class="textForm" for="date"><b>Fecha de nacimiento</b></label>
			<input class="inpForm" type="date" placeholder="Nacimiento" name="date" required>
			
			<label class="textForm" for="psw"><b>DNI</b></label>
			<input class="inpForm" type="password" placeholder="DNI" name="psw" required>
			
			<div class="divButton">
				<a href="/user/profile"><button class="btnForm" type="text">REGISTRARSE</button></a>
			</div>
		</div>
	</form>
	<!-- Productos Encontrados -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>