<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>


<body>
	<!-- Header -->
	<%- include('./partials/headerDesLogueado') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<% for( let i = 0; i < listadoProducts.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= listadoProducts[i].id %> ">
							<figure class="product-box_image">
								<img src="<%= listadoProducts[i].img %> " alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= listadoProducts[i].titulo %> </h2>
								<p><%= listadoProducts[i].descripcion %> </p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>

			<!-- Show mis productos -->
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<% for( let i = 0; i < 4; i++ ) { //El largo del buble va a depender de los productos que el usuario tenga agregados (eliminar si no hace falta) %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/">
							<figure class="product-box_image">
								<img src="/images/products/default-image.png" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2>Nombre del producto</h2>
								<p>Descripción corta del producto Lorem ipsum dolor sit amet consectetur, adipisicing elit. Eaque delectus ex</p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>