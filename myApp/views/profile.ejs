<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<!-- Include Header -->

</head>
<body>
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado.ejs')  %> 
	<% }else {%>
		<%- include('./partials/headerDesLogueado.ejs')  %> 
	<% } %> 

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img class="foto-perfil" src="/images/users/<%= foto_perfil %>" alt="fotoPerfil">
		</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= nombre + " " + apellido %> 
						<a href="/user/profile/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<form action="/user/profile/<%= id %>" method="POST">
						<button class="btnForm" type="submit" name="idFollow">SEGUIR</button>
					</form>
				</div>
				<p class="emailProfile"> <%= email %>
				<p class="emailProfile"> <%= fecha_nacimiento %>


				<div>
					<ul class="info-gen">
						<li> <%= products.length %> productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- Datos del usuario -->

	<% if (products.length != 0) { %>
		<!-- Mis productos -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Mis productos</h2>
				</div>
				<!-- Show mis productos -->
				<% for(let i = 0; i < products.length; i++ ) { %>	
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/id/<%- products[i].id %> ">
								<figure class="product-box_image">
									<img src="/images/imgProduct/<%- products[i].image %>" alt="">
								</figure>
								<article class="product-box_data">
									<h2><%- products[i].title %> </h2>
									<p><%- products[i].descrip %> </p>
									<p>Comentarios: <%- products[i].comments %> </p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
			</div>
		</div>
		<!-- /Mis productos -->
	<% } %>
	


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>