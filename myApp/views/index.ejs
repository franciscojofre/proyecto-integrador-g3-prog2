<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<!-- Include Header -->

<body>
	<!-- Header -->
	<%- include('./partials/headerDesLogueado') %>
	<!-- /Header -->

	<!-- Banner -->
	<div class="banner">
			<img src="/images/bnerOct.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<% if (locals.user != undefined) { %>
		<h1>Bienvenido <%= locals.user.name %> </h1>
	<% } %> 
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
	
			<% for(let i = 0; i < listaProductos.length; i++) { %>
				<% if (listaProductos[i].novedad === true) { %>		
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/id/<%= listaProductos[i].id %> ">
								<figure class="product-box_image">
									<img src="<%= listaProductos[i].image %>" alt="">
								</figure>
								<article class="product-box_data">
									<h2><%= listaProductos[i].title %> </h2>
									<p><%= listaProductos[i].descrip %> </p>
									<p>Comentarios: <%= listaProductos[i].comments %> </p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
			<% } %>
		</div>
	</div>
	<!-- /Novedades -->

	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < 9; i++ ) { %>
				<% if (listaProductos[i].comments > 10) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/id/<%= listaProductos[i].id %>">
								<figure class="product-box_image">
									<img src="<%= listaProductos[i].image %>" alt="">
								</figure>
								<article class="product-box_data">
									<h2><%= listaProductos[i].title %> </h2>
									<p><%= listaProductos[i].descrip %> </p>
									<p>Comentarios: <%= listaProductos[i].comments %> </p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->
	
	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>