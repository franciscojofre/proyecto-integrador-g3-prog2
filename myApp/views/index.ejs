<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<!-- Include Header -->

<body>
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado.ejs')  %> 
	<% }else {%>
		<%- include('./partials/headerDesLogueado.ejs')  %> 
	<% } %> 

	<!-- Banner -->
	<div class="banner">
			<img src="/images/bnerOct.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
	
			<% for(let i = 0; i < listaProductos.length; i++) { %>
				<%// if (listaProductos[i].novedad === true) { %>		
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/id/<%= listaProductos[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= listaProductos[i].image %>" alt="<%= listaProductos[i].title %>">
								</figure>
								<article class="product-box_data">
									<h2><%= listaProductos[i].title %></h2>
									<p><%= listaProductos[i].descrip %></p>
									<p>Comentarios: <%= listaProductos[i].comments.length %></p>
								</article>
							</a>
							<% if (listaProductos[i].users != undefined) { %>
								<a class="producerName" href="/user/profile/<%= listaProductos[i].user_id %>">Creado por <%= listaProductos[i].users.nombre %> <%= listaProductos[i].users.apellido %></a>
							<% } %>
						</section>
					</div>
				<% } %>
			<%// } %>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>