<!-- Header -->
	<header class="main-header">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-5 col-md-2">
					<a href="/" class="main-header_home-link">
						<img src="/images/UdeTech_blanco.png">
					</a>
				</div>
				<div class="col-7 col-md-6">
					<form action="/product/search-results" method="GET" class="search-form">
						<input type="text" name="search" placeholder="Buscar productos, marcas y más" class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
				<div class="col-12 col-md-4">
					<div class="main-header_credit-link" id="routesLogued">
							<a class="nameProfileHeader" href="/user/profile/<%= locals.user.id %> " > 
								<ul>
									<li>
										<p>Bienvenid@</p>
									</li>
									<li>
										<% if (locals.user != undefined) { %>
											<p><%= locals.user.nombre + " " + locals.user.apellido %></p>
										<% } %>
									</li>
								</ul>
								<div>
									<img class="fotoPerfil" src="/images/users/<%= user.foto_perfil %>" alt="fotoPerfil">
								</div>
							</a>
					</div>
				</div>
			</div>
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>
			<nav class="main-navbar">
				<ul class="left-navbar">
					<li><a href="/">Todos los productos</a></li>
					<li><a href="/product/product-add">Cargar productos</a></li>
					<li><a href="/user/profile/<%= locals.user.id %>">Mi Perfil</a></li>
				</ul>
				<p class="right-navbar">
					<a href="/user/logout" class="itemLista" type="submit">Cerrar Sesión <i class="fas fa-sign-in-alt"></i></a>
				</p>
			</nav>
		</div>
	</header>
<!-- Header -->

