<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('./partials/head') %>
  <!-- Include Header -->

  <body>
    <% if (locals.user != undefined) { %>
      <%- include('./partials/headerLogueado.ejs')  %> 
    <% }else {%>
      <%- include('./partials/headerDesLogueado.ejs')  %> 
    <% } %> 
	
    <!-- ProductDetail -->

        <div class="container products-wrapper">
          <div class="d-flex align-items-center">
            <ul>
              <li><h2 class="products-title"><%= product.title %></h2></li>
              <li><h2 class="products-title">Producto creado por: <a href="/user/profile/<%= product.user_id %>"><%= product.users.nombre %> <%= product.users.apellido %> </a></h2></li>
            </ul>
          </div>
        <div class="product-detail">
          <div class="row">
            <article class="col-12 col-lg-8 product-detail-info">
              <img src="/images/imgProduct/<%= product.image %>" alt="" class="product-detail-img"/>
              <p class="product-detail-description"> <%= product.descrip %> </p>
            </article>
            <div class="col-12 col-lg-4">
                <section class="comments">

                  <p><%= product.comments.length %> </p>

                  <% for( let i = 0; i < product.comments.length; i++ ) { %>
                    <article>
                          <img class="fotoPerfil" src="/images/users/<%= product.comments[i].users.foto_perfil %>" alt="fotoPerfil">
                        <div class="data">
                          <p class="user">
                            <strong>
                              <a href="/user/profile/<%= product.comments[i].users.id %> "><%= product.comments[i].users.nombre %> <%= product.comments[i].users.apellido %> </a>
                            </strong>
                            <a href="" class="comment"> <%= product.comments[i].comment_description %>  </a>
                          </p>
                        </div>
                      </article>
                  <% } %>
                    
                </section>
                <form class="form" action="/product/id/<%= product.id %>" method="POST">
                  <section class="comments">   
                      <article>
                        <% if (locals.user != undefined) { %>
                          <img class="fotoPerfil" src="/images/users/<%= user.foto_perfil %>" alt="fotoPerfil"> <div class="data">
                          <p class="user">
                            <strong>
                              <a href="/user/profile"><%= user.nombre %> <%= user.apellido %>  </a>
                            </strong>
                            <a href="" class="comment"> </a>
                          </p>
                          <input class="form-input" name="commentDescription" type="text" value="" placeholder="Agregar comentario"/>
                          <button type="submit" class="buy-now-button"> AGREGAR COMENTARIO </button>
                        <% }else {%>
                          <!-- <img class="fotoPerfil" src="/images/users/default-image.png" alt="fotoPerfilPredet">
                          <a href="/user/register">Crea tu perfil para poder comentar</a> -->

                          <input class="form-input" name="commentDescription" type="text" value="" placeholder="Para agregar un comentario debes registrarte"/>
                          <a href="/user/register/" class="buy-now-button"> AGREGAR COMENTARIO </a>

                        <% } %>
                      </article>
                  </section>

                </form>
                <hr/>
              </div>
            </div>
          </div>

          <% if (locals.user != undefined) { %>
            <% if (locals.user.id == product.user_id) { %>
            <a class= "buy-now-button" href="/product/product-edit/<%= product.id %>">Editar</a>
            <form action="/product/id/<%= product.id %>/delete" method="POST">
              <input type="hidden" name="id" id="" value="<%= product.id %> ">
              <button class="buy-now-button" type="submit">ELIMINAR</button>
            </form>
            <% } %>
          <% } %>
        </div>
    <!-- /product detail -->

    <!-- footer -->
    <%- include('./partials/footer') %>
    <!-- /footer -->
  </body>
</html>
